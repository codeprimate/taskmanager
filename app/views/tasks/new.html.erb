<h1>New Task</h1>

<%= error_messages_for :task %>

<% form_for(:task, :url => collection_url) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <p>
    <%= submit_tag "Create" %> 
    <%= link_to("Cancel", :back) %>
  </p>
<% end %>

<script type="text/javascript">
    $('task_name').focus();
</script>