<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Context</th>
    <th>Due</th>
    <th>Completed</th>
    <th>Note</th>
    <th>Time spent</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.project_id %></td>
    <td><%=h task.context_id %></td>
    <td><%=h task.due %></td>
    <td><%=h task.completed %></td>
    <td><%=h task.note %></td>
    <td><%=h task.time_spent %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
