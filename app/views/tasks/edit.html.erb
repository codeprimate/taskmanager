<h1>Editing Task</h1>

<%= error_messages_for :task %>

<% form_for(:task, :url => object_url, :html => { :method => :put }) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <p>
    <%=submit_tag "Update"%>
    <%= link_to("Cancel", :back) %> | 
    <%= link_to("Destroy", task_path(object), 
                :method => :delete, 
                :confirm => "Are you sure you want to destroy this task?") %>
  </p>
<% end %>