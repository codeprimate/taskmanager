<h1>Listing Contexts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Note</th>
    <th width=3>Actions</th>
  </tr>
  <%- @contexts.each do |context|%>
    <tr>
      <td><%= h context.name  %></td>
      <td><%= h context.note%> </td>
      <td><%=link_to 'Show', object_url(context) %></td>
      <td><%=link_to 'Edit', edit_object_url(context) %></td>
      <td><%=link_to 'Destroy', object_url(context), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Context', new_object_url %>